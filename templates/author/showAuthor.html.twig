<table>
    {% if authors is empty %}
    <tr>
        <td colspan="5">No authors</td>
    </tr>
    {% else %}
    <tr>
        <th>id</th>
        <th>Name</th>
        <th>picture</th>
        <th>email</th>
        <th>books</th>
    </tr>

    {% for author in authors%}
    {%if id==author.id %}

    <tr>
        <td>{{ author.id}}</td>
        <td>{{ author.username|upper}}</td>
        <td><img src={{author.picture}}></td>
        <td>{{ author.email}}</td>
        <td>{{ author.nb_books}}</td>
    </tr>

    {% endif %}

    {%endfor%}

    {% endif %}



</table>